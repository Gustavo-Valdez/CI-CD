pipeline {
    agent any 

    tools {
        nodejs "node"
    }

    stages {
        stage('install') {
            steps {
                sh 'pwd'
                dir('/var/www/html/') {
                    git branch: 'main', url: 'https://github.com/Gustavo-Valdez/CI-CD'
                    sh 'pwd'
                    sh 'npm install'
                }
            }
        }
    }
}